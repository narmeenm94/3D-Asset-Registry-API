# METRO 3D Asset Registry API - Environment Configuration
# =======================================================
# Copy this file to .env and update values as needed

# API Settings
API_V1_PREFIX=/api/v1
PROJECT_NAME=METRO 3D Asset Registry
DEBUG=true

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://metro:metro@localhost:5432/metro

# Storage Backend: "local", "s3", or "azure"
STORAGE_BACKEND=local

# Local Storage Settings
LOCAL_STORAGE_PATH=./storage

# S3/MinIO Settings (when STORAGE_BACKEND=s3)
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=metro-assets
S3_REGION=us-east-1

# Azure Blob Settings (when STORAGE_BACKEND=azure)
AZURE_STORAGE_CONNECTION_STRING=
AZURE_CONTAINER_NAME=metro-assets

# DDTE Authentication (JWT Validation)
DDTE_JWKS_URL=http://localhost:8080/.well-known/jwks.json
DDTE_ISSUER=https://auth.ddte.eu
DDTE_AUDIENCE=dtrip4h-asset-libraries

# Development mode: Set to true to bypass JWT validation
DEV_MODE=true
DEV_USER_ID=dev-user-001
DEV_USER_EMAIL=developer@metropolia.fi
DEV_USER_INSTITUTION=METRO_Finland

# File Upload Limits
MAX_UPLOAD_SIZE=524288000

# Logging
LOG_LEVEL=INFO
